[[source]]
name = "pypi"
url = "https://pypi.org/simple"
verify_ssl = true

[dev-packages]
hypercorn = {extras = ["uvloop"],version = "*"}
uvicorn = "*"
flit = "*"
black = "*"
pytest = "*"

[packages]
pbr = "*"
passlib = "*"
fastapi = "*"
oic = "*"
databases = "*"
email-validator = "*"
daphne = "*"
python-multipart = "*"
authlib = "*"
httpx = "*"
twisted = {extras = ["http2", "tls"],version = "*"}
aiofiles = "*"

[scripts]
requirements = "bash -c 'pipenv lock -r > requirements.txt'"
build = "bash -c 'pushd static && npm install && npm run build && popd'"

# hypercorn
hypercorn = "bash -c 'hypercorn -b 0.0.0.0:3000 app:app --reload'"
build-hypercorn = "bash -c 'pipenv run build && pipenv run hypercorn'"
kill-hypercorn = "bash -c 'kill -9 $(pgrep -f uvicorn)'"

# daphine
daphne = "bash -c 'daphne -b 0.0.0.0 -p 3000 app:app'"
build-daphne = "bash -c 'pipenv run build && pipenv run daphne'"
kill-daphne = "bash -c 'kill -9 $(pgrep -f daphne)'"

# uvicorn
uvicorn = "bash -c 'uvicorn --host 0.0.0.0 --port 3000 app:app --reload'"
build-uvicorn = "bash -c 'pipenv run build && pipenv run uvicorn'"
kill-uvicorn = "bash -c 'kill -9 $(pgrep -f uvicorn)'"

[pipenv]
allow_prereleases = true
